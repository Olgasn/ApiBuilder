@page "/"
@inject NavigationManager Navigation

<div class="d-flex flex-column align-center justify-center py-8">
    <h3>Choose UI language / Выберите язык интерфейса</h3>

    <MudButton Class="mt-4" Variant="Variant.Outlined" OnClick=@(() => SelectLanguage("en-US"))>English</MudButton>
    <MudButton Class="mt-4" Variant="Variant.Outlined" OnClick=@(() => SelectLanguage("ru-RU"))>Русский</MudButton>
</div>

@code {
    private void SelectLanguage(string culture)
    {
        LocalizationService.SetCurrentCulture(culture);
        Navigation.NavigateTo("/solution");
    }
}
